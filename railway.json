{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "backend/Dockerfile",
    "buildContext": ".",
    "watchPatterns": [
      "backend/**",
      "src/**",
      "package.json",
      "package-lock.json",
      "railway.json"
    ],
    "buildArgs": {
      "VITE_DATABASE_URL": "${{DATABASE_URL}}",
      "VITE_API_URL": "https://${{RAILWAY_PUBLIC_DOMAIN}}",
      "VITE_AIRCRAFT_API_URL": "https://aircraft-database-mcp-production.up.railway.app",
      "VITE_AIRCRAFT_API_KEY": "prod_3b0c2496dfb58aab0c1f534f92ce88e4ef74213cdf63cf046fbc2a0bf7fc2f5f"
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "healthcheck": {
    "path": "/health",
    "timeout": 10,
    "interval": 30
  }
}
